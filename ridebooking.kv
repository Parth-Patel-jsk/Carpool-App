<RideBookingScreen>:
    name: "ridebooking"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '15dp'
        
        # Header
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: '10dp'
            
            MDIconButton:
                icon: 'arrow-left'
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                user_font_size: "24sp"
                size_hint_x: None
                width: self.height
                on_release: app.root.current = "home"
            
            MDLabel:
                text: 'Book a ride'
                font_size: '22sp'
                bold: True
                color: 0, 0, 0, 1
                halign: 'left'
                valign: 'center'
        
        # Location selection
        MDCard:
            size_hint_y: None
            height: '100dp'
            md_bg_color: 0.95, 0.95, 0.95, 1
            radius: [10, 10, 10, 10]
            padding: '10dp'
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: '10dp'
                
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '20dp'
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: '10dp'
                        
                        MDIconButton:
                            icon: 'map-marker'
                            theme_text_color: "Custom"
                            text_color: 0.1, 0.6, 1, 1
                            user_font_size: "18sp"
                            size_hint_x: None
                            width: self.height
                        
                        MDLabel:
                            text: 'Home'
                            font_size: '16sp'
                            color: 0.5, 0.5, 0.5, 1
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: '10dp'
                        
                        MDIconButton:
                            icon: 'office-building'
                            theme_text_color: "Custom"
                            text_color: 0, 0, 0, 1
                            user_font_size: "18sp"
                            size_hint_x: None
                            width: self.height
                        
                        MDLabel:
                            text: 'Workplace'
                            font_size: '16sp'
                            color: 0.5, 0.5, 0.5, 1
                
                MDIconButton:
                    icon: 'swap-vertical'
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    md_bg_color: 0.1, 0.6, 1, 1
                    user_font_size: "18sp"
                    size_hint: None, None
                    size: '40dp', '40dp'
                    pos_hint: {'center_y': 0.5}
                    radius: [20, 20, 20, 20]
        
        # Ride details
        MDCard:
            size_hint_y: None
            height: '80dp'
            md_bg_color: 1, 1, 1, 1
            radius: [10, 10, 10, 10]
            padding: '10dp'
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: '10dp'
                
                # Car icon
                BoxLayout:
                    size_hint_x: None
                    width: '60dp'
                    
                    Image:
                        source: 'car_icon.png'  # You'll need to provide this image
                        size_hint: None, None
                        size: '50dp', '30dp'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
                # Ride info
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '5dp'
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        
                        MDLabel:
                            text: 'Carex Mini'
                            font_size: '18sp'
                            bold: True
                            color: 0, 0, 0, 1
                        
                        MDLabel:
                            text: 'â‚¹ 15 /km'
                            font_size: '18sp'
                            bold: True
                            color: 0, 0, 0, 1
                            halign: 'right'
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: None
                            width: '80dp'
                            
                            MDIconButton:
                                icon: 'clock-outline'
                                theme_text_color: "Custom"
                                text_color: 0.5, 0.5, 0.5, 1
                                user_font_size: "16sp"
                                size_hint_x: None
                                width: '20dp'
                            
                            MDLabel:
                                text: '5 mins'
                                font_size: '14sp'
                                color: 0.5, 0.5, 0.5, 1
                        
                        MDTextButton:
                            text: 'Change Ride'
                            font_size: '14sp'
                            color: 0.1, 0.6, 1, 1
                            pos_hint: {'right': 1}
                            halign: 'right'
        
        # Spacing
        Widget:
            size_hint_y: None
            height: '20dp'
        
        # Number of passengers
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '70dp'
            spacing: '5dp'
            
            MDLabel:
                text: 'Number of passengers'
                font_size: '14sp'
                color: 0.5, 0.5, 0.5, 1
                size_hint_y: None
                height: '20dp'
            
            Spinner:
                text: '3'
                values: ['1', '2', '3', '4']
                size_hint_y: None
                height: '50dp'
                background_normal: ''
                background_color: 0.95, 0.95, 0.95, 1
                color: 0, 0, 0, 1
                font_size: '18sp'
                text_size: self.width - dp(20), None
                halign: 'left'
                valign: 'center'
                padding: '20dp', '0dp'
        
        # Time
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '70dp'
            spacing: '5dp'
            
            MDLabel:
                text: 'Time'
                font_size: '14sp'
                color: 0.5, 0.5, 0.5, 1
                size_hint_y: None
                height: '20dp'
            
            Spinner:
                text: '8:30 AM'
                values: ['8:00 AM', '8:30 AM', '9:00 AM', '9:30 AM', '10:00 AM']
                size_hint_y: None
                height: '50dp'
                background_normal: ''
                background_color: 0.95, 0.95, 0.95, 1
                color: 0, 0, 0, 1
                font_size: '18sp'
                text_size: self.width - dp(20), None
                halign: 'left'
                valign: 'center'
                padding: '20dp', '0dp'
        
        # Spacing
        Widget:
            size_hint_y: 1
        
        # Buttons
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '120dp'
            spacing: '10dp'
            
            Button:
                text: 'Schedule Ride'
                size_hint_y: None
                height: '50dp'
                background_normal: ''
                background_color: 0.1, 0.6, 1, 1
                color: 1, 1, 1, 1
                font_size: '18sp'
                on_release: app.root.current = "schedule"
                canvas.before:
                    Color:
                        rgba: 0.9, 0.9, 0.9, 1
                    Line:
                        width: 1
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 25)
            
            Button:
                text: 'Book Now'
                size_hint_y: None
                height: '50dp'
                background_normal: ''
                background_color: 0.1, 0.6, 1, 1
                color: 1, 1, 1, 1
                font_size: '18sp'
                on_release: app.show_success_popup()
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [25, 25, 25, 25]