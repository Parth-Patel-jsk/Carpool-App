<DestinationScreen>:
    name: "destination"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1  # Clean white background
        
        # Top App Bar - Centered Title
        MDTopAppBar:
            title: "Set Destination"
            pos_hint: {"top": 1}
            md_bg_color: 0.13, 0.59, 0.95, 1  # Professional blue
            specific_text_color: 1, 1, 1, 1
            title_align: "center"  # Center the title

        # Destination Input Section
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, 0.25
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            padding: "20dp"
            spacing: "10dp"
            md_bg_color: 0, 0, 0, 0  # Transparent background

            MDLabel:
                text: "Destination"
                font_style: "H6"
                halign: "left"
                theme_text_color: "Primary"
                font_size: "20sp"

            TextInput:
                id: destination_input
                hint_text: "Enter your destination"
                mode: "rectangle"
                size_hint_x: 1.0
                size_hint_y: 0.5
                line_color_normal: 0.13, 0.59, 0.95, 1
                line_color_focus: 0.13, 0.59, 0.95, 1
                hint_text_color_normal: 0.5, 0.5, 0.5, 1
                hint_text_color_focus: 0.13, 0.59, 0.95, 1
                text_color: 0, 0, 0, 1
                background_color: 0, 0, 0, 0  # Transparent background
                background_normal: ''
                background_active: ''
                canvas.before:
                    Color:
                        rgba: (0.13, 0.59, 0.95, 1)  # Border color (same as line_color)
                    Line:
                        width: 1  # Border width
                        rectangle: (self.x, self.y, self.width, self.height)

       

        # Action Buttons
        MDRectangleFlatButton:
            text: "Request ride"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            size_hint: 0.8, 0.1
            line_color: 0.13, 0.59, 0.95, 1
            text_color: 1, 1, 1, 1  # White text for contrast
            font_size: "16sp"
            md_bg_color: 0.13, 0.59, 0.95, 1  # Professional blue background
            on_release: root.manager.current ="ridebooking"
                
            elevation: 4
            radius: [10, 10, 10, 10]

        MDFlatButton:
            text: "Select your ride"
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
            theme_text_color: "Custom"
            text_color: 0.4, 0.4, 0.4, 1
            font_size: "14sp"
            on_release: app.root.current = "ride_selection"

        MDFlatButton:
            text: "See available rides"
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            theme_text_color: "Custom"
            text_color: 0.4, 0.4, 0.4, 1
            font_size: "14sp"
            on_release: app.root.current = "available_rides"

        BoxLayout:
            # Status bar padding
            size_hint_y: None
            height: "20dp"