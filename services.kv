<ServicesScreen>:
    name: "services"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 0.1, 0.1, 0.1, 1  # Dark background
        padding: "8dp"
        spacing: "8dp"

        # Header with better visibility
        MDLabel:
            text: "Services"
            font_style: "H5"
            size_hint_y: None
            height: "36dp"
            color: 1, 1, 1, 1
            bold: True
            padding_y: "4dp"
        
        # Go anywhere, get anything
        MDLabel:
            text: "Go anywhere, get anything"
            font_style: "Body1"
            size_hint_y: None
            height: "24dp"
            color: 1, 1, 1, 1
            
        # Banner for Moto
        MDCard:
            size_hint: 1, None
            height: "100dp"
            md_bg_color: 0.2, 0.4, 0.8, 1  # Blue color
            radius: [8, 8, 8, 8]
            padding: "8dp"
            on_release: root.manager.current = "ridebooking"
            MDBoxLayout:
                orientation: "horizontal"
                
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.7
                    spacing: "4dp"
                    padding: "4dp"
                    
                    MDLabel:
                        text: "Save time and money"
                        font_style: "Body1"
                        color: 1, 1, 1, 1
                        
                    MDRaisedButton:
                        text: "Try Moto"
                        size_hint: None, None
                        width: "130dp"
                        height: "36dp"
                        md_bg_color: 1,1,1,1
                
                MDBoxLayout:
                    size_hint_x: 0.3
                    
                    FitImage:
                        source: "assets/moto_pic.png"  # Replace with your image
        
        # Transportation options - reduced size and count
        MDGridLayout:
            cols: 2
            spacing: "8dp"
            size_hint_y: None
            height: "220dp"
            padding: [0, 5, 0, 5]
            
            # Moto option
            MDCard:
                size_hint: 1, None
                height: "100dp"
                md_bg_color: 0.15, 0.15, 0.15, 1
                radius: [8, 8, 8, 8]
                on_release: root.manager.current = "ridebooking"
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                    spacing: "4dp"
                    
                    MDIconButton:
                        icon: "motorbike"
                        font_size: "28sp"
                        halign: "center"
                        
                    MDLabel:
                        text: "Moto"
                        halign: "center"
                        color: 1, 1, 1, 1
                        font_size: "14sp"
            
            # Mini Car option
            MDCard:
                size_hint: 1, None
                height: "100dp"
                md_bg_color: 0.15, 0.15, 0.15, 1
                radius: [8, 8, 8, 8]
                
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                    spacing: "4dp"
                    
                    MDIconButton:
                        icon: "car-hatchback"
                        font_size: "28sp"
                        halign: "center"
                        
                    MDLabel:
                        text: "Mini Car"
                        halign: "center"
                        color: 1, 1, 1, 1
                        font_size: "14sp"
            
            # Sedan option
            MDCard:
                size_hint: 1, None
                height: "100dp"
                md_bg_color: 0.15, 0.15, 0.15, 1
                radius: [8, 8, 8, 8]
                
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                    spacing: "4dp"
                    
                    MDIconButton:
                        icon: 
                        font_size: "28sp"
                        halign: "center"

                    
                        
                    MDLabel:
                        text: "Sedan"
                        halign: "center"
                        color: 1, 1, 1, 1
                        font_size: "14sp"
            
            # SUV option
            MDCard:
                size_hint: 1, None
                height: "100dp"
                md_bg_color: 0.15, 0.15, 0.15, 1
                radius: [8, 8, 8, 8]
                
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                    spacing: "4dp"
                    
                    MDIconButton:
                        icon: "car-estate"
                        font_size: "28sp"
                        halign: "center"
                        
                        
                    MDTextButton:
                        text: "SUV"
                        halign: "center"
                        color: 1, 1, 1, 1
                        font_size: "14sp"
        
        # Get anything done section
        MDLabel:
            text: "Get anything done"
            font_style: "Body1"
            size_hint_y: None
            height: "24dp"
            color: 1, 1, 1, 1
            
        # Delivery options
        MDGridLayout:
            cols: 2
            spacing: "8dp"
            size_hint_y: None
            height: "110dp"
            
            # Courier option
            MDCard:
                size_hint: 1, None
                height: "100dp"
                md_bg_color: 0.15, 0.15, 0.15, 1
                radius: [8, 8, 8, 8]
                
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                    spacing: "4dp"
                    
                    MDIcon:
                        icon: "package-variant-closed"
                        font_size: "28sp"
                        halign: "center"
                        
                    MDLabel:
                        text: "Courier"
                        halign: "center"
                        color: 1, 1, 1, 1
                        font_size: "14sp"
            
            # Store Pickup option
            MDCard:
                size_hint: 1, None
                height: "100dp"
                md_bg_color: 0.15, 0.15, 0.15, 1
                radius: [8, 8, 8, 8]
                
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                    spacing: "4dp"
                    
                    MDIcon:
                        icon: "store"
                        font_size: "28sp"
                        halign: "center"
                        
                    MDLabel:
                        text: "Store Pickup"
                        halign: "center"
                        color: 1, 1, 1, 1
                        font_size: "14sp"
        
        # Spacer to push navigation to bottom
        Widget:
            size_hint_y: 1
        
        # Bottom navigation - simplified
        MDBoxLayout:
            adaptive_height: True
            size_hint_y: None
            height: "60dp"
            md_bg_color: 0.15, 0.15, 0.15, 1
            
            MDGridLayout:
                cols: 4
                
                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDIconButton:
                        icon: "home"
                        icon_size: "24sp"
                        pos_hint: {"center_x": 0.5}
                        theme_text_color: "Custom"
                        text_color: 0.5, 0.5, 0.5, 1
                        user_font_size: "24sp"
                        on_release: root.manager.current = "home"
                        
                    MDLabel:
                        text: "Home"
                        halign: "center"
                        font_size: "10sp"
                        theme_text_color: "Custom"
                        text_color: 0.5, 0.5, 0.5, 1
                
                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDIconButton:
                        icon: "view-grid"
                        icon_size: "24sp"
                        pos_hint: {"center_x": 0.5}
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        user_font_size: "24sp"
                        
                    MDLabel:
                        text: "Services"
                        halign: "center"
                        font_size: "10sp"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                
                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDIconButton:
                        icon: "clipboard-text"
                        icon_size: "24sp"
                        pos_hint: {"center_x": 0.5}
                        theme_text_color: "Custom"
                        text_color: 0.5, 0.5, 0.5, 1
                        user_font_size: "24sp"
                        on_release: root.manager.current = "available_rides"
                        
                    MDLabel:
                        text: "Activity"
                        halign: "center"
                        font_size: "10sp"
                        theme_text_color: "Custom"
                        text_color: 0.5, 0.5, 0.5, 1
                
                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDIconButton:
                        icon: "account"
                        icon_size: "24sp"
                        pos_hint: {"center_x": 0.5}
                        theme_text_color: "Custom"
                        text_color: 0.5, 0.5, 0.5, 1
                        user_font_size: "24sp"
                        on_release: root.manager.current = "profile"
                        
                    MDLabel:
                        text: "Account"
                        halign: "center"
                        font_size: "10sp"
                        theme_text_color: "Custom"
                        text_color: 0.5, 0.5, 0.5, 1